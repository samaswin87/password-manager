= simple_form_for resource do |form|
  .row
    .col-md-6
      label.control-label.mr-3 Logo
      - if resource.logo.attached?
        = image_tag resource.logo.variant(resize_to_limit: [32, 32]), class: 'img-crud img-responsive img-logo mr-3', lazy: true
      - else
        = image_tag '/vendor/images/img_placeholder.png', class: 'img-crud img-responsive img-logo mr-3', lazy: true
      = form.input :logo, as: :file, label: false
  .row
    .col-md-6
      label.control-label Notes
      =render 'shared/text_area_form', form: form, field: :details
      = form.button :button, 'Update Details', class: "btn btn-success pull-right"
      = link_to 'Cancel', collection_path, class: 'btn btn-default  mr-3 pull-right'
