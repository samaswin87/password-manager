<h2>Change Password</h2>

<%= simple_form_for(resource, as: resource_name, url: user_password_path, html: { method: :put }) do |f| %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, label: "New Password", required: true, autofocus: true, hint: ("#{@minimum_password_length} minimum characters need to be present" if @minimum_password_length) %>
    <!-- <%= f.input :password_confirmation, label: "Confirme a senha", required: true %> -->
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Change Password' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
