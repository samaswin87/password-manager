<h2>Editar <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: user_registration_path, html: { method: :put }) do |f| %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Aguardando confirmação para: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, autocomplete: 'off', hint: "leave it blank if you don't want to change", required: false %>
    <%= f.input :password_confirmation, required: false %>
    <%= f.input :current_password, hint: 'we need you to confirm the password to save the changes', required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Atualizar' %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to 'Excluir conta', user_registration_path, data: { confirm: 'Confirma?' }, method: :delete %></p>

<%= link_to 'Back', :back %>
